<%layout("/layout/boilerplate")%>
<body><br>
    <h3><i>Edit your listing</i></h3>
    <form action="/listings/<%=listings._id%>?_method=put" method="post" class="form-control">
        <div>
            <label for="title" class="form-label fb">Title:</label>
            <input  name="listing[title]" value="<%=listings.title%>" type="text" class="form-control">
        </div>
        <br>
        <div>
            <label for="description" class="form-label">Description:</label><br>
            <textarea  name="listing[description]" class="form-control"><%=listings.description%></textarea>
        </div>
        <br>
        <div>
            <label for="Image" class="form-label">URL:</label>
            <input  name="listing[image]" value="<%=listings.image%>" class="form-control" type="text">
        </div>
        <br>
        <div>
            <label for="Price" class="form-label">Price:</label>
            <input  name="listing[price]" value="<%=listings.price%>" type="number" class="form-control">
        </div>
        <br>
        <div>
            <label for="country" class="form-label">Country:</label>
            <input  name="listing[country]" value="<%=listings.country%>" type="text" class="form-control">
        </div>
        <br>
        <div>
            <label for="location" class="form-label">Location:</label>
            <input  name="listing[location]" value="<%=listings.location%>" type="text" class="form-control">
        </div>
        <br>
        <button class="btn bcol"><b>Edit</b></button>
    </form>
</body>